.container
  display flex
  flex-flow: column nowrap
  flex 1
  align-items center
.list-board
  padding-top 30px
  max-width 1060px
  width 100%
  flex 1
  display flex
  flex-flow: column nowrap
.el-pagination, .banner
  flex none
.banner
  display flex
  flex-flow: column nowrap
  justify-content center
  align-items center
.banner
  height 40px
  background bottom center
  background-size cover
.el-pagination
  margin 50px 0 60px 0
.list-item
  width 100%
  display flex
  flex-flow column nowrap
  padding-bottom 30px
  margin-top 30px
  border-bottom 1px solid #e9e9e9
  .title
    display flex
    flex-flow row nowrap
    cursor pointer
    .article 
      color #333333
      max-width 960px
      line-height 22px
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
      flex 1
    .time
      color #b0b0b0
      width 100px
      flex none
  .detail
    margin-top 16px
    line-height 18px
    max-width 960px
    color #999999
    overflow hidden
    white-space nowrap
    text-overflow ellipsis