.el-pagination
  .el-pager 
    li
      min-width 28px
      width 28px
      height 28px
      line-height 28px
      font-weight normal
      padding 0
      margin 0 18px
      &.active
        color #ffffff
        background-color #5db8f1
        border-radius 14px
    li+li
      margin-left: 18px    
    li:first-child
      margin-left: 18px
    li:last-child
      margin-right: 18px
  .el-pagination__total
    margin-left: 38px
.el-pagination button:hover i
  color: red